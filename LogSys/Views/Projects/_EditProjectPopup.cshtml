@model LogSys.Models.ProjectModel
@using (Ajax.BeginForm("EditProject", "Projects", new AjaxOptions {HttpMethod = "Post", UpdateTargetId = "projects-list", OnSuccess = "javascript:$('#g_ajax_popup').hide().html('');ProjectsManager.bindTableEvents()"}, new {id = "edit_project_postback"}))
{
    <fieldset>
        <legend>
            Edit project
        </legend>
        @Html.EditorForModel()
        <input type="submit" value="Edit" />
        <input type="button" onclick="$('#g_ajax_popup').hide().html('')" value="Cancel"/>
        @Html.ValidationSummary()
    </fieldset>
}